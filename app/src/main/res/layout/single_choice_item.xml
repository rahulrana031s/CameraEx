<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:layout_margin="10dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_single"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Title"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt_single">

            <RadioButton
                android:id="@+id/rbtn_f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option A"
                app:layout_constraintEnd_toEndOf="@+id/txt_single"
                app:layout_constraintStart_toStartOf="@+id/txt_single"
                app:layout_constraintTop_toBottomOf="@+id/txt_single" />

            <RadioButton
                android:id="@+id/rbtn_s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option B"
                app:layout_constraintEnd_toEndOf="@+id/rbtn_f"
                app:layout_constraintStart_toStartOf="@+id/rbtn_f"
                app:layout_constraintTop_toBottomOf="@+id/rbtn_f" />

            <RadioButton
                android:id="@+id/rbtn_t"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option C"
                app:layout_constraintEnd_toEndOf="@+id/rbtn_s"
                app:layout_constraintStart_toStartOf="@+id/rbtn_s"
                app:layout_constraintTop_toBottomOf="@+id/rbtn_s" />
        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>